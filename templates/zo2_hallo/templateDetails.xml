<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="template" client="site" method="upgrade">
    <name>zo2_hallo</name>
    <creationDate>Dec 30, 2014</creationDate>
    <author>ZooTemplate.com</author>
    <authorEmail>support@zootemplate.com</authorEmail>
    <authorUrl>https://github.com/cleversoft/Zo2-Joomla-Template-Framework</authorUrl>
    <copyright>Copyright (c) 2008 - 2015 CleverSoft</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GPLv2 or later</license>
    <version>1.4.3</version>
    <description>
        <![CDATA[<html>
      <img src="http://www.zootemplate.com/wp-content/uploads/2013/12/zt_hallo_responsive-1024x437.png" style="max-width:323px;" />
                <p>The Zo2 Hallo is a clean modern responsive design that is a great place to start when building your custom Zo2 powered template.</p>
                <p class="alert "><strong>Note:</strong> Zo2 Hallo requires Zo2 plugin to be installed and enabled.</p>	            
        </html>
     ]]>
    </description>

    <languages>
        <language tag="en-GB">language/en-GB/en-GB.tpl_zo2_blank_template.ini</language>
    </languages>

    <positions>
        <position>bottom1</position>
        <position>bottom2</position>
        <position>bottom3</position>
        <position>bottom4</position>   
        <position>breadcrumb</position>  
        <position>feature</position>   
        <position>footer1</position>
        <position>footer2</position>
        <position>footer_copyright</position>   
        <position>footer_logo</position>             
        <position>header_logo</position>             
        <position>left</position>
        <position>menu</position>           
        <position>right</position>  
        <position>search</position>
        <position>slide</position>                     
        <position>top</position>
        <position>top-menu</position>        
        <position>top-social</position>
        <position>user1</position>
        <position>user2</position>
        <position>user3</position>
        <position>user4</position>
    </positions>

    <files>
        <filename>index.php</filename>
        <filename>layout.json</filename>
        <filename>error.php</filename>
        <filename>params.ini</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <folder>layouts</folder>
        <folder>html</folder>
        <folder>includes</folder>
        <folder>assets</folder>
        <folder>components</folder>
    </files>
    <config>
        <fields name="params" addfieldpath="/plugins/system/zo2/formfields">            
            <fieldset name="zo2">
                <field name="zo2" type="zo2" layout="config" />               
            </fieldset>                                                                                  
        </fields>
    </config>
</extension>
